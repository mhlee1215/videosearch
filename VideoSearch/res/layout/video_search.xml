<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<FrameLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent">


		<LinearLayout android:id="@+id/search_result_container" 
			android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="fill_parent">
			<LinearLayout android:id="@+id/search_result_container" 
				android:orientation="horizontal"
				android:layout_width="fill_parent" android:layout_height="wrap_content">
			<Button android:text="SEARCH" android:id="@+id/search_button"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
			<EditText android:id="@+id/searchQueryText"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout android:id="@+id/search_result_container" 
				android:orientation="vertical"
				android:layout_width="fill_parent" android:layout_height="fill_parent">
				<ListView android:id="@+id/search_list"
					android:layout_width="fill_parent" android:cacheColorHint="#00000000"
					android:layout_height="fill_parent" />
				<TextView android:id="@+id/search_empty_list"
					android:layout_width="fill_parent" android:layout_height="fill_parent"
					android:visibility="gone" android:gravity="center" android:textSize="20px"
					android:text="Empty result!" />
			</LinearLayout>
		</LinearLayout>
	</FrameLayout>

</LinearLayout>
